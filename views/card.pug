extends layout

block content
    div(class=`card ${cardClass}`)
        h3.title ACME Insurance Co
        div.info-row.name-row
            p.label Name:
            p #{firstName} #{lastName}
        div.info-container
            div.info-row
                p.label Insurance Type:
                p #{type}
        div.info-row
            p.label DOB:
            p #{dateOfBirth.getMonth()+1}/#{dateOfBirth.getDate()}/#{dateOfBirth.getFullYear()}
        div.info-row
            div
                p.label Address:
            div.address-text
                p #{addressLine1}
                p #{addressLine2}
                p #{city}, #{state}, #{zip}
        div.info-container
            div.info-row
                p.label Act #:
                p #{accountNumber}
                    div.info-container
                        div.info-row
                            p.label Acct #
                            p #{accountNumber}
                        div.info-row
                            p.label Exp.:

                            p #{currentDate.getMonth()+1}/#{currentDate.getDate()}/#{currentDate.getFullYear()+4}
                            div.info-container
        div.info-row
        p.label Started Insurance Policy:

        p #{currentDate.getMonth()-4}/#{currentDate.getDate()-6}/#{currentDate.getFullYear()}

    br
    br
    a(href='/') Change Card